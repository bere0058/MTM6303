{% comment %}
	Bonus:
	Extend the Bootstrap Card Functionality created in Week 4 - Inclass to allow up to three cards. This should be achieved using Bootstrap, Shopify Section, and Shopify Blocks.
{% endcomment %}
<section class="bootstrap-card">
<div class="section-header section-header--small">
    <h2 class="section-header__title">{{ section.settings.sectionTitle | escape }}</h2>
  </div>
<section class="container">
  <div class="row">
  {% for block in section.blocks %}  
    {% case block.type %}
  
      {% when 'card-1' %}  
        <div class="card col" style="width: 18rem;">
          	{% if block.settings.image1 %}
              {{ block.settings.image1 | image_url: width: 5000 | image_tag }}
              <style>
                  .card>img {
                      height: auto;
                      width: 100%
                  }
              </style>
          	{% else %}
 				<img src="https://talentclick.com/wp-content/uploads/2021/08/placeholder-image.png" class="img-fluid">
          	{% endif %}
          <div class="card-body">
            <h5 class="card-title text-center">{{ block.settings.title1 }}</h5>
            <p class="card-text">{{ block.settings.text1 }}</p>
            {{ block.settings.linktext1 | link_to: block.settings.linkurl1  }}
            <style>
              .card-body>a {
                font-family: "Source Sans Pro", sans-serif;
                text-transform: uppercase;
                width: 100%;
              	display: inline-block;
                color: var(--shopify-editor-setting-color_button_primary_text);
                background-color: var(--shopify-editor-setting-color_primary);
                text-align: center;
                text-decoration: none;
                vertical-align: middle;
                cursor: pointer;
                -webkit-user-select: none;
                -moz-user-select: none;
                user-select: none;
                border: 1px solid transparent;
                padding: 0.375rem 0.75rem;
                border-radius: 0.25rem;
                transition: color .15s ease-in-out,background-color .15s ease-in-out,border-color .15s ease-in-out,box-shadow .15s ease-in-out;
              }
            </style>
          </div>
        </div>

      {% when 'card-2' %}
        <div class="card col" style="width: 18rem;">
          {% if block.settings.image2 %}
              {{ block.settings.image2 | image_url: width: 5000 | image_tag }}
              <style>
                  .card>img {
                      height: auto;
                      width: 100%
                  }
              </style>
          	{% else %}
 				<img src="https://talentclick.com/wp-content/uploads/2021/08/placeholder-image.png" class="img-fluid">
          	{% endif %}
          <div class="card-body">
            <h5 class="card-title text-center">{{ block.settings.title2 }}</h5>
            <p class="card-text">{{ block.settings.text2 }}</p>
          </div>
        </div>
    
      {% when 'card-3' %}
        <div class="card col" style="width: 18rem;">
          {% if block.settings.image3 %}
              {{ block.settings.image3 | image_url: width: 5000 | image_tag }}
              <style>
                  .card>img {
                      height: auto;
                      width: 100%
                  }
              </style>
          	{% else %}
 				<img src="https://talentclick.com/wp-content/uploads/2021/08/placeholder-image.png" class="img-fluid">
          	{% endif %}
          <div class="card-body">
            <p class="card-text">{{ block.settings.text3 }}</p>
          </div>
        </div>
  
    {% endcase %} 
  {% endfor %}
  </div>
</section>  
</section>  

