			"type": "text",
			"label": "Content",
			"default": "Some quick example text to build on the card title and make up the bulk of the card's content."
		},
		{
          "id": "linkurl1",
          "type": "url",
          "label": "URL link"
        },
        {
          "id": "linktext1",
          "type": "text",
          "label": "Link text",
		  "default": "URL text"
        },
		{
           "type": "image_picker",
           "id": "image1",
           "label": "Image"
        }
      ]
    },
    {
      "type": "card-2",
      "name": "Card-2",
      "settings": [
        {
			"id": "title2",
			"type": "text",
			"label": "Title",
			"default": "Card Title"
		},
		{
			"id": "text2",
			"type": "text",
			"label": "Content",
			"default": "Some quick example text to build on the card title and make up the bulk of the card's content."
		},
		{
           "type": "image_picker",
           "id": "image2",
           "label": "Image"
        }
      ]
    },
	{
      "type": "card-3",
      "name": "Card-3",
      "settings": [
		{
			"id": "text3",
			"type": "text",
			"label": "Content",
			"default": "Some quick example text to build on the card title and make up the bulk of the card's content."
		},
		{
           "type": "image_picker",
           "id": "image3",
           "label": "Image"
        }
      ]
    }
  ],
  "presets": [{
  "name": "Bootstrap-card",
  "category": "Custom"
  }]
}
{% endschema %}

