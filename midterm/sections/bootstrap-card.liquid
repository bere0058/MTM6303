  "name": "Bootstrap-card",
  "tag": "section",
  "class": "bootstrap-card",
  "settings": [ 
		{
          "id": "sectionTitle",
          "type": "text",
          "label": "title",
          "default": "Section Title"
		}
	],
  "max_blocks": 8,
  "blocks": [
    {
      "type": "card-1",
      "name": "Card-1",
      "settings": [
		{
			"id": "title1",
			"type": "text",
			"label": "Title",
			"default": "Card Title"
		},
		{
